peso = float(input("Fale seu peso:"))

altura = float(input("Fale sua altura:"))

imc= peso/(altura*altura)

if(imc<18.5):
    print("vc esta abaixo do peso")
elif(imc>18.5 and imc<24.9):
    print("vc esta com o peso ideal")
else:
    print("vc esta acima do peso")

6.

sexo = float(input("digite seu sexo, 1 para femenino e 2 para mascolino:"))

idade = float(input("fale sua idade:"))

if(idade>18 and sexo == 1):
    print("parabéns voce é maior de idade")
elif(idade<18 and sexo == 1):
    print("Voce ainda não tem idade suficiante")
elif(sexo ==1 and idade >18 ):
    print("vc é feminina")
else:
    print("vc é masculino")

7.

n1 = float(input("fale um numero:"))
n2 = float(input("fale outro numero:"))
n3 = float(input("fale o ultimo:"))

if(n1>n2 and n2>n3):
    print("",n1,n2,n3)
elif(n2>n1 and n1>n3):
    print("",n2,n1,n3)
elif(n3>n2 and n2>n1):
    print("",n3,n2,n1)

8.
n1 = float(input("fale um numero:"))
n2 = float(input("fale outro numero:"))

soma = n1+n2

if(soma % 2 == 0 and soma % 2 > 0):
    print("+par")
elif(soma % 2 != 0 and soma % 2 > 0):
    print("+impar")
   
elif soma % 2 != 0 and soma % 2<0:
    print("-par")
else:
    print("-impar")
