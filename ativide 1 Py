    print(n2,"esse numero é maior que o outro")
else:
    print("esses numeros sao iguais")

4.

nm = input("seu nome:")
nm1 = input("seu nome:")
sl = float(input("seu salario:"))
sl1 = float(input("seu salario:"))

x= sl- sl1
y= sl1- sl
if (sl>sl1):
    print(nm,"seu salario é mais que",nm1,"com a diferenca de",x)
else:
    print(nm1,"seu salario é mais que",nm,"com a diferenca de",y)

